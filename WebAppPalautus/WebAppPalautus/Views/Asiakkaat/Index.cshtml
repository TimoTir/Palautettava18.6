@model IEnumerable<WebAppPalautus.Models.Asiakkaat>

@{
    ViewBag.Title = "Index";
}

<h2>Asiakkaat</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th> @Html.DisplayNameFor(model => model.AsiakasID)</th>
        <th> @Html.DisplayNameFor(model => model.Nimi)</th>
        <th> @Html.DisplayNameFor(model => model.Osoite)</th>
        <th> @Html.DisplayNameFor(model => model.Postinumero)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.AsiakasID)</td>
            <td> @Html.DisplayFor(modelItem => item.Nimi)</td>
            <td> @Html.DisplayFor(modelItem => item.Osoite)</td>
            <td> @Html.DisplayFor(modelItem => item.Postinumero)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AsiakasID }, new { @class = "btn btn-primary btn-large" }) |
                @Html.ActionLink("Details", "Details", new { id = item.AsiakasID }, new { @class = "btn btn-primary btn-large" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AsiakasID }, new { @class = "btn btn-primary btn-large" })
            </td>
        </tr>
    }

</table>

