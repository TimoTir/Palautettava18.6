@model IEnumerable<WebAppPalautus.Models.Tuotteet>

@{
    ViewBag.Title = "Index";
}

<h2>Tuotteet</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th> @Html.DisplayNameFor(model => model.TuoteID)</th>
        <th> @Html.DisplayNameFor(model => model.Nimi)</th>
        <th> @Html.DisplayNameFor(model => model.Ahinta)</th>
        <th> @Html.DisplayNameFor(model => model.Tilausrivit)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.TuoteID)</td>
            <td> @Html.DisplayFor(modelItem => item.Nimi)</td>
            <td> @Html.DisplayFor(modelItem => item.Ahinta)</td>
            <td> @Html.DisplayFor(modelItem => item.Tilausrivit)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TuoteID }, new { @class = "btn btn-primary btn-large" }) |
                @Html.ActionLink("Details", "Details", new { id = item.TuoteID }, new { @class = "btn btn-primary btn-large" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TuoteID }, new { @class = "btn btn-primary btn-large" })
            </td>
        </tr>
    }

</table>



